<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConverterToolFragment">

    <data>
        <variable
            name="viewModel"
            type="com.yseko.currencyconversion.ConverterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/fromSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="hello"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="@{viewModel.input}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/toSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="hello"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="@{viewModel.output}"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoContainer">

            <LinearLayout
                android:id="@+id/rowOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <Button
                    android:id="@+id/btnSeven"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="7"
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickNum(7)}"/>

                <Button
                    android:id="@+id/btnEight"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="8"
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickNum(8)}"/>

                <Button
                    android:id="@+id/btnNine"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="9"
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickNum(9)}"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rowTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowOne">
                <Button
                    android:id="@+id/btnFour"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="4"
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickNum(4)}"/>

                <Button
                    android:id="@+id/btnFive"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="5"
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickNum(5)}"/>

                <Button
                    android:id="@+id/btnSix"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="6"
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickNum(6)}"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rowThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowTwo">
                <Button
                    android:id="@+id/btnOne"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="1"
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickNum(1)}"/>

                <Button
                    android:id="@+id/btnTwo"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="2"
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickNum(2)}"/>

                <Button
                    android:id="@+id/btnThree"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="3"
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickNum(3)}" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rowFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowThree">
                <Button
                    android:id="@+id/btnDecimal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="."
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickDec()}"/>

                <Button
                    android:id="@+id/btnZero"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="0"
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickNum(0)}"/>

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="delete"
                    android:textSize="30sp"
                    android:onClick="@{()->viewModel.onClickDelete()}"/>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="convert"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowFour"
                android:onClick="@{()->viewModel.getConvert(viewModel.fromConvert, viewModel.toConvert, viewModel.input)}"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>